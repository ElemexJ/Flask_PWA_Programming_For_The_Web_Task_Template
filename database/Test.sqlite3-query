-- CREATING TABLES
CREATE TABLE IF NOT EXISTS GamePages (
    PageID INTEGER PRIMARY KEY AUTOINCREMENT,
    Game Name TEXT NOT NULL,
    Description TEXT NOT NULL,
    Image IMAGE NOT NULL,
    Logo IMAGE NOT NULL,
    Catagories TEXT NOT NULL,
    Hyperlink TEXT NOT NULL
);

CREATE TABLE IF NOT EXISTS Posts (
    PostID INTEGER PRIMARY KEY AUTOINCREMENT,
    UserID INTEGER NOT NULL,
    Username TEXT NOT NULL,
    ProfilePicture TEXT,
    PostTitle TEXT NOT NULL,
    PostCategory TEXT NOT NULL,
    PostGame TEXT NOT NULL,
    PostTags TEXT,
    PostLikes INTEGER DEFAULT 0,
    PostComments INTEGER DEFAULT 0,
    PostContent TEXT NOT NULL,
    PostDate TEXT NOT NULL
);

CREATE TABLE IF NOT EXISTS Posts (
    PostID INTEGER PRIMARY KEY AUTOINCREMENT,
    UserID INTEGER NOT NULL,
    Username TEXT NOT NULL,
    ProfilePicture TEXT,
    PostTitle TEXT NOT NULL,
    PostCategory TEXT NOT NULL,
    PostGame TEXT NOT NULL,
    PostTags TEXT,
    PostLikes INTEGER DEFAULT 0,
    PostComments INTEGER DEFAULT 0,
    PostContent TEXT NOT NULL,
    PostDate TEXT NOT NULL
);

-- QUERYING INFO
SELECT * 
FROM UserInfomation;

SELECT Username, Password 
FROM UserInfomation;

SELECT UserID, Age 
FROM UserInfomation 
WHERE Age > 29;

SELECT UserID, Username, Email 
FROM UserInfomation 
WHERE Email LIKE '%gmail.com';

SELECT UserID, Username, Password
FROM UserInfomation
WHERE Password NOT LIKE '%!%'
AND Password NOT LIKE '%&%'
AND Password NOT LIKE '%$%'
AND Password NOT LIKE '%^%'
AND Password NOT LIKE '%*%'
AND Password NOT LIKE '%(%'
AND Password NOT LIKE '%)%'
AND Password NOT LIKE '%@%'
AND Password NOT LIKE '%#%'
AND Password NOT LIKE '%?%'
AND Password NOT LIKE '%/%'
AND Password NOT LIKE '%<%'
AND Password NOT LIKE '%>%'
AND Password NOT LIKE '%{%'
AND Password NOT LIKE '%}%'
AND Password NOT LIKE '%[%'
AND Password NOT LIKE '%]%'
AND Password NOT LIKE '%;%';